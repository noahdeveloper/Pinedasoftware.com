    @Styles.Render("~/bundles/styles")
    
    <!--Not in bundle because it causes issues with font file paths.-->
    <link href="~/Content/css/all.css" rel="stylesheet" />

</head>

<body>
    <!--The original template can be found here https://startbootstrap.com/previews/freelancer -->

    <div>
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/customJS")
    @Scripts.Render("~/bundles/s")

    <!--Not in bundle because it causes issues with JS in files.-->
    <script src="~/Content/Scripts/jqBootstrapValidation.js"></script>
    <script src="~/Content/Scripts/freelancer.js"></script>

    @RenderSection("scripts", required: false)
